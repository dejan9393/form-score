{
  "$id": "https://example.com/arrays.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the form"
    },
    "questions": {
      "type": "array",
      "items": {
        "$ref": "#question"
      }
    }
  },
  "definitions": {
    "question": {
      "$id": "#question",
      "type": "object",
      "properties": {
        "title": {
          "description": "The title of the question",
          "type": "string"
        },
        "description": {
          "description": "The description of the question",
          "type": "string"
        },
        "answers": {
          "type": "array",
          "items": {
            "$ref": "#answer"
          },
          "minItems": 2
        }
      }
    },
    "answer": {
      "$id": "#answer",
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      }
    }
  }
}
